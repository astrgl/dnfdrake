' Gambas class file

Public $CLOSEPASS As Integer

Public Sub Form_Open()
  Dim flBTN As File  
  Dim jBTN As Byte
  Dim s$BTN As String
  Dim ss$BTN As New String[]

  If Fmain.$PROGRESSBARFORCESUSPEND = 1 Then
     FRUN.ProgressBar1.Pulse = False    
     FRUN.ProgressBar1.Value = 1
'TESTI E TOOLTIP********************************************
   flBTN = Open "/usr/share/dnfdrake/dnfdrake-BTN-" & Fmain.$LANG For Read 
      While Not Eof(flBTN)
      Input #flBTN, s$BTN
      ss$BTN.Add(s$BTN)
    Wend
    Close #flBTN
    For jBTN = 0 To ss$BTN.Max
      BTNSTOP.Text = Replace(ss$BTN[15], "_", " ")
      Next
    flBTN.Close     
'*******************************************************************
     BTNSTOP.Enabled = True
     FRUN.MONITORVIEW.Visible = False
     FRUN.Text = "DnfDrake,  " & Fmain.$FATTO
  Else 
     Timer1.Enabled = True
     ProgressBar1.Pulse = True
     Fmain.txtconsole.Enabled = True
     BTNSTOP.Text = Fmain.btnstop.Text 
  Endif 
  
     $CLOSEPASS = 0    
 
  Wait 0.2
  Fmain.Enabled = False  
  
End


Public Sub Form_Close()

'MODIFICA IN CORSO PROTEZIONE CHIUSURA
 If $CLOSEPASS = 0 Then
   If FPW.Visible = False Then
      Dim iAnswer As Integer = Message.Question(Fmain.$ASKEXIT, Fmain.$SI, Fmain.$NO)
        If (iAnswer = 1) Then
          BTNSTOP_Click
          Fmain.Enabled = True
        Else
           BTNSTOP.Enabled = True
           Stop Event
        Endif 
    Else 
        FRUN.Close  
    Endif 
 Else 
   If FSINOSECURE.Visible = True Then
   Else 
     Fmain.Enabled = True  
   Endif
       ' If Fmain.$MEMOCOMMAND = "RECOVERSUSPEND" Then
        '   Fmain.Enabled = False
       ' Endif
 Endif 
'************************************************************


  
End

Public Sub BTNSTOP_Click()
BTNSTOP.Enabled = False
$CLOSEPASS = 1
' Fmain.VERIFYSUSPEND ' RIMOSSO IL RIPRISTINO DEL SUSPEND ORA AVVIENE SOLO ALLA CHIUSURA DI DNFDRAKE
If ProgressBar1.Value = 1 Then
    If Fmain.txtConsole.Visible = True Then
      Endif
    Fmain.TimerUPLISTE.Enabled = True
    Fmain.Mouse = Mouse.Default
    Fmain.TMPLISTCLEAN
    Fmain.$FRUNMAIN = 0
    Me.Close
  Else 
    Fmain.BTNSTOP_Click
    Sleep 0.5
    Fmain.Btnclear_Click
    Fmain.$ABORT = 1
    Fmain.$FRUNMAIN = 0
    'Fmain.$CLEARLOGSUSPEND = 1 ' RIMOSSO IL RIPRISTINO DEL SUSPEND ORA AVVIENE SOLO ALLA CHIUSURA DI DNFDRAKE
    Fmain.TMPLISTCLEAN
    Fmain.$WAITSUSPEND = 1
    Me.Close
Endif
End

