Public Sub LOADSIZE()
 Dim flSIZE As File 
 Dim jSIZE As Byte 
 Dim s$SIZE As String
 Dim ss$SIZE As New String[]
 flSIZE = Open User.Home &/ ".config/dnfdrake/memosize" For Read
 While Not Eof(flSIZE)
   Input #flSIZE, s$SIZE
   ss$SIZE.Add(s$SIZE)
  Wend
  Close #flSIZE
  For jSIZE = 0 To ss$SIZE.Max
      Fmain.X = Replace(ss$SIZE[0], "_", " ")
      If Fmain.X < 0 Then
         Fmain.X = 0 
      Endif
      Fmain.Y = Replace(ss$SIZE[1], "_", " ")
      $RISOLUZIONEX = Replace(ss$SIZE[2], "_", " ")
      If $RISOLUZIONEX < 1280 Then
         $RISOLUZIONEX = 1280 
      Endif
      $RISOLUZIONEY = Replace(ss$SIZE[3], "_", " ")
      If $RISOLUZIONEY < 500 Then
         $RISOLUZIONEY = 500
      Endif
      If BTNFULLSCREEN.Visible = True
         BTNFULLSCREEN_Click
      Else 
         BTNRESIZE_Click
         BTNFULLSCREEN_Click
       Endif       
    
      Next 
   flSIZE.Close  
   If BTNFULLSCREEN.Visible = True
         BTNFULLSCREEN_Click
      Else 
         BTNRESIZE_Click
         BTNFULLSCREEN_Click
       Endif 
End


