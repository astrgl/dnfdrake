Static Private Function Normalize(sStr As String) As String

  Dim sNorm As String
  sNorm = sStr
  If System.Charset = Desktop.Charset Then 
    Return sNorm
  Else
    Return Conv$(sNorm, System.Charset, Desktop.Charset) 
  Endif
End

