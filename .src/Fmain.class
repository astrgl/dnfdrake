                   If Listpkg.Visible = True Then
                     If Cmbtipo.index = 1 Or If Cmbtipo.index = 0
                        For Each a In Listpkg.Selection
                          s = Listpkg[a].Text
                         ' s = Scan(s, "* * *")[0]
                          spkg = spkg & " " & s 
                          Listpkg.Remove(a)
                        Next
                        If spkg = "" Then
                           Message.Info($SELECTPKG, "OK")
