                           Listpkg.UnSelectAll
                           Btnclear_Click
                           If Btnexp2.Text = "EXP2" Then
                           Btnexp2_Click  
                           Endif
                            Me.Mouse = Mouse.Wait 
                           Print #$hProcess, $REINSTALL & spkg & $VERBOSE & gb.NewLine; 
                           FRUNSHOW
                        Endif
                     Endif   
                   Endif
             Endif
        Endif
    Endif        
